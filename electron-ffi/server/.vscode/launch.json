{
    "configurations": [
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "server"
            ],
            "outputCapture": "std",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
              "${workspaceFolder}/**",        //use source maps for files in workspace folder
              "!**/node_modules/**"           //but ignore everything in the node_modules folder
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}